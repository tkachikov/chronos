{
    "name": "tkachikov/chronos",
    "description": "Settings commands for Laravel Scheduling",
    "keywords": ["laravel", "command", "schedule", "chronos"],
    "license": "MIT",
    "autoload": {
        "files": ["src/constants.php"],
        "psr-4": {
            "Tkachikov\\Chronos\\": "src/",
            "Tkachikov\\Chronos\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ткачиков Александр",
            "email": "a.tkachikov@mail.ru"
        }
    ],
    "require": {
        "php": "^8.2",
        "tkachikov/memory": "^1.2",
        "tkachikov/laravel-withtrashed": "^1.0"
    },
    "require-dev": {
        "laravel/framework": "^12.10",
        "orchestra/testbench": "^10.2",
        "infection/infection": "^0.31.9",
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.90",
        "vimeo/psalm": "^6.13"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tkachikov\\Chronos\\Providers\\ChronosServiceProvider"
            ]
        }
    },
    "scripts": {
      "fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
      "fix:check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
      "psalm": "vendor/bin/psalm",
      "test": "vendor/bin/phpunit",
      "mutation": "vendor/bin/infection --min-msi=70 --min-covered-msi=80"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
